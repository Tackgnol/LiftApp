<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:LiftApp"
             BackgroundImage="bgManly.jpeg"
             x:Class="LiftApp.MainPage">
    <StackLayout VerticalOptions="CenterAndExpand" 
           HorizontalOptions="CenterAndExpand">
        <Label Text="Welcome to the LyftApp!" Font="Arial" FontSize="75"  FontAttributes="Bold" HorizontalTextAlignment="Center" TextColor="White"/>
        <Button Text="Start a workout!" BackgroundColor="White" Command="{Binding GoToWorkoutsCommand}"/>
        <Button Text="Plan Your workouts!" BackgroundColor="White"/>
        <Button Text="View Statistics" BackgroundColor="White"/>
    </StackLayout>
</ContentPage>